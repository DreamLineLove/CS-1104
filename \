#include <iostream>
using namespace std;

void handleInsertionOrDeletion(string operation, int index, string value,
                               int array_size, string array[]) {
  cout << "\n\t" << operation << endl;
  if (operation == "INSERTION" && value != "") {
    cout << "- Index of the element: ";
    cin >> index;
    while (index < 0 || index >= array_size) {
      cout << "\n! Index out of bounds!\n- Index valid from 0...up to "
           << array_size - 1 << ": ";
      cin >> index;
    }

    cout << "- Name of the element: ";
    cin >> value;
    cout << "\n\tARRAY ELEMENTS" << endl;

    array[index] = value;

  } else if (operation == "DELETION" && value == "") {
    cout << "\n- Index of the element: ";
    cin >> index;
    while (index < 0 || index >= array_size) {
      cout << "\n! Index out of bounds!\n- Index valid from 0...up to "
           << array_size - 1 << ": ";
      cin >> index;
    }

    array[index] = "deleted";
  }
}

int main() {
  int array_size, index;
  string array[array_size], value;
  for (int i = 0; i < array_size; i++) {
    array[i] = "---";
  }
  bool run_loop = true;

  handleInsertionOrDeletion("INSERTION", index, value, array_size, array);

  cout << "\n\tARRAY ELEMENTS" << endl;
  for (int i = 0; i < array_size; i++) {
    cout << " " << i << ".\t" << array[i] << endl;
  }
  handleInsertionOrDeletion("INSERTION", index, value, array_size, array);
  for (int i = 0; i < array_size; i++) {
    cout << " " << i << ".\t" << array[i] << endl;
  }

  return 0;
}
